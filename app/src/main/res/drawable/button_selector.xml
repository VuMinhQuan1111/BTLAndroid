<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Button pressed state -->
        <item android:state_pressed="true" android:drawable="@color/green" />
        <!-- Button focused state -->
        <item android:state_focused="true" android:drawable="@color/red" />
        <!-- Button hover state (use this attribute for API 14 and above) -->
        <item android:state_hovered="true" android:drawable="@color/blue" />

        <!-- Default state -->
        <item android:drawable="@color/salmon" />

</selector>